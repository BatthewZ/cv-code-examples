@using Assignment2.Data.Models
@model LoginModel 
@{
    ViewData["Title"] = "MBCA: Log In";
}

<h1>Login</h1>

<div style="display: flex; flex-direction: row;">
    <div style="width: 400px; margin-right: 20px;">
        <form asp-action="Login">
            <div class="form-group">
                <label asp-for="LoginID" class="control-label"></label>
                <input asp-for="LoginID" class="form-control" />
                <span asp-validation-for="LoginID" class="text-danger"></span>
                @Html.ValidationMessage("LoginFailed", new{ @class= "text-danger"})
            </div>
            <div class="form-group">
                <label for="Password" class="control-label">Password</label>
                <input id="Password", name="password" type="password" class="form-control"
                data-val="true" data-val-required="You must enter a password." />
                @Html.ValidationMessage("Password", new{ @class = "text-danger"})
            </div>
            <p></p>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <hr>
    <div>
        <!-- Image taken from https://www.pexels.com/photo/blue-and-yellow-high-rise-building-2042538/ and used for educational purposes only. -->
        <img src="~/img/bank_img.jpg" style="max-height: 600px;" />
    </div>
</div>

<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>