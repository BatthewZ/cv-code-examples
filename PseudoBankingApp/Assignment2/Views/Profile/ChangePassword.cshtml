@using Assignment2.ViewModels
@using BMTools
@model PasswordViewModel

@{
    const string ErrorMsg = "Must be 8-20 characters long. Only alphanumeric characters and: - + _ * ^ ! $. Cannot have multiple hyphens in a row. ";
}

<h1 class="text-center">Change Password:</h1>
<p></p>
<div style="display: flex; flex-direction: row; justify-content: center;"> 
    <div style="margin-right: 20px;">
        <form asp-action="SubmitPassword" style="width: 400px;">
            <p></p>
            <div class="row">
                <h4>
                    <label asp-for="OldPassword" class="control-label"></label>
                </h4>
                <input asp-for="OldPassword" class="form-control" type="password" />
                <span asp-validation-for="OldPassword" class="text-danger"></span>
            </div>
            <div class="row">
                <h4>
                    <label asp-for="NewPassword" class="control-label"></label>
                </h4>
                <input asp-for="NewPassword" type="password" class="form-control" pattern="@RegexPattern.PASSWORD" title="@ErrorMsg" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="row">
                <h4>
                    <label asp-for="ConfirmPassword" class="control-label"></label>
                </h4>
                <input asp-for="ConfirmPassword" type="password" class="form-control" pattern="@RegexPattern.PASSWORD" title="@ErrorMsg" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <p></p>
            <input type="submit" class="btn btn-primary" value="Change Password" />
        </form>
    </div>
    <div>
        <!-- Image taken from https://www.pexels.com/photo/blue-and-yellow-high-rise-building-2042538/ and used for educational purposes only. -->
        <img src="~/img/bank_img.jpg" style="max-height: 600px;" />
    </div>
</div>